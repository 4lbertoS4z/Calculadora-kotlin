<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Textview para mostrar los resultados -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:textSize="36sp" />

    <!-- GridLayout para los botones de la calculadora -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvResult"
        android:rowCount="5"
        android:columnCount="4">

        <!-- Botones de la primera fila -->
        <Button
            android:id="@+id/btnClear"
            android:text="C"
            android:textSize="24sp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:background="@drawable/textview_border" />

        <Button
            android:id="@+id/btnBackspace"
            android:text="←"
            android:textSize="24sp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:background="@drawable/textview_border" />

        <Button
            android:id="@+id/btnDivide"
            android:text="/"
            android:textSize="24sp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:background="@drawable/textview_border" />

        <!-- Botones de la segunda fila -->
        <Button
            android:id="@+id/btnSeven"
            android:text="7"
            android:textSize="24sp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:background="@drawable/button_number_border"/>

        <Button
            android:id="@+id/btnEight"
            android:text="8"
            android:textSize="24sp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:background="@drawable/button_number_border" />

        <Button
            android:id="@+id/btnNine"
            android:text="9"
            android:textSize="24sp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:background="@drawable/button_number_border" />

        <Button
            android:id="@+id/btnMultiply"
            android:text="*"
            android:textSize="24sp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:background="@drawable/textview_border" />

        <!-- Botones de la tercera fila -->
        <Button
            android:id="@+id/btnFour"
            android:text="4"
            android:textSize="24sp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:background="@drawable/button_number_border" />

        <Button
            android:id="@+id/btnFive"
            android:text="5"
            android:textSize="24sp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:background="@drawable/button_number_border" />

        <Button
            android:id="@+id/btnSix"
            android:text="6"
            android:textSize="24sp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:background="@drawable/button_number_border" />

        <!-- Botones de la cuarta fila -->
        <Button
            android:id="@+id/btnSubtract"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:background="@drawable/textview_border"
            android:text="-"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnOne"
            android:text="1"
            android:textSize="24sp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:background="@drawable/button_number_border" />

        <Button
            android:id="@+id/btnTwo"
            android:text="2"
            android:textSize="24sp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:background="@drawable/button_number_border" />

        <Button
            android:id="@+id/btnThree"
            android:text="3"
            android:textSize="24sp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:background="@drawable/button_number_border" />

        <Button
            android:id="@+id/btnAdd"
            android:text="+"
            android:textSize="24sp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:background="@drawable/textview_border" />

        <!-- Botones de la quinta fila -->
        <Button
            android:id="@+id/btnDecimal"
            android:text="."
            android:textSize="24sp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:background="@drawable/button_number_border" />

        <Button
            android:id="@+id/btnZero"
            android:text="0"
            android:textSize="24sp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:background="@drawable/button_number_border" />

        <Button
            android:id="@+id/btnEquals"
            android:text="="
            android:textSize="24sp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:background="@drawable/textview_border" />
    </GridLayout>
</RelativeLayout>

